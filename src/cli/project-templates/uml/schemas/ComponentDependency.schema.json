{
  "$id": "ComponentDependency.schema.json",
  "title": "Component Dependency",
  "type": "object",
  "properties": {
    "source": {
      "$ref": "References/ComponentReference.schema.json"
    },
    "target": {
      "$ref": "References/ComponentReference.schema.json"
    },
    "type": {
      "type": "string",
      "enum": ["Requires", "Accesses"]
    },
    "interface": {
      "type": "string",
      "enum": ["publish", "subscribe", "internal", "public"]
    }
  },
  "oneOf": [
    {"required": ["source", "type"]},
    {"required": ["target", "type"]}
  ]
}